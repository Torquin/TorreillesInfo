<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.torreilles.fr"
        versionCode="10" 
        version   = "1.1.1">

    <!-- versionCode is optional and Android only -->

    <name>TorreillesInfo</name>

    <description>
       Consulter le Torreilles Info sur son smartphone
    </description>

    <author href="http://www.torreilles.fr" email="laurie.clark@torreilles.fr">
        Laurie Clark
    </author>

    <preference name="phonegap-version" value="3.0.0" />

    <icon src="icon1.png" gap:platform="android" gap:density="ldpi" />
    <icon src="icon2.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icon3.png" gap:platform="android" gap:density="hdpi" />
    <icon src="icon4.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />
    
    <gap:plugin name="com.phonegap.plugins.barcodescanner" />
    <gap:plugin name="org.apache.cordova.core.media-capture" />
    <gap:plugin name="com.phonegap.plugins.pushplugin" />
    
    <gap:plugin name="org.apache.cordova.core.camera" />
    <gap:plugin name="org.apache.cordova.core.file" />
    <gap:plugin name="org.apache.cordova.core.file-transfer" />
    <plugin name="Camera" value="org.apache.cordova.CameraLauncher" />
    <plugin name="Capture" value="org.apache.cordova.Capture"/>
    <access origin="*" subdomains="true" />
    <access uri="*" subdomains="true" />
</widget>
